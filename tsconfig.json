{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ESNext",
    "lib": ["es6"],

    /* Modules */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": ["node", "jest"],

    /* JavaScript Support */
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/__tests__/**/*"]
}
