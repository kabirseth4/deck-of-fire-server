{
  "name": "deck-of-fire-server",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "NODE_NO_WARNINGS=1 nodemon --exec node --loader ts-node/esm src/index.ts",
    "build": "tsc",
    "test": "NODE_OPTIONS='--experimental-vm-modules' NODE_NO_WARNINGS=1 jest --detectOpenHandles",
    "postinstall": "npm run build",
    "db:migrate": "NODE_NO_WARNINGS=1 node --loader ts-node/esm node_modules/.bin/knex --knexfile src/db/knexfile.ts migrate:latest",
    "db:rollback": "NODE_NO_WARNINGS=1 node --loader ts-node/esm node_modules/.bin/knex --knexfile src/db/knexfile.ts migrate:rollback",
    "db:seed": "NODE_NO_WARNINGS=1 node --loader ts-node/esm node_modules/.bin/knex --knexfile src/db/knexfile.ts seed:run"
  },
  "type": "module",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "mysql2": "^3.9.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.25",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/parser": "^7.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.2"
  }
}
