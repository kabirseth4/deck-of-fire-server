{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["es6"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node", "jest"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/__tests__/**/*"]
}
