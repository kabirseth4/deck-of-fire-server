{
  "name": "deck-of-fire-server",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "postinstall": "tsc",
    "dev": "ts-node-dev --respawn --pretty --transpile-only ./src/index.ts",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --verbose",
    "db:migrate": "cd src/db && knex migrate:latest",
    "db:rollback": "cd src/db && knex migrate:rollback",
    "db:seed": "cd src/db && knex seed:run"
  },
  "type": "module",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "mysql2": "^3.9.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.25",
    "@typescript-eslint/parser": "^7.1.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/server/__tests__/helpers/test.setup.js"
    ],
    "transform": {}
  }
}
